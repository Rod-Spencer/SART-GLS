<UserControl x:Class="Segway.Modules.WorkOrder.WorkOrderSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpfres="clr-namespace:Segway.WPFResources;assembly=WPFResources"
             xmlns:shared="http://schemas.actiprosoftware.com/winfx/xaml/shared"
             xmlns:vm="clr-namespace:Segway.Modules.WorkOrder"
             mc:Ignorable="d"
             d:DesignHeight="80" d:DesignWidth="900">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="275"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="PT Serial Number:" FontSize="14.667" FontFamily="Tahoma" Opacity="0.65" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Work Order Number:" FontSize="14.667" FontFamily="Tahoma" Opacity="0.65" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>
        <TextBox Grid.Row="1" Grid.Column="0" x:Name="txtSN" Height="30"
                 Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                 BorderThickness="2" Margin="5,5,5,0" HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center" VerticalAlignment="Center"
                 Text="{Binding Path=PTSerialNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 TabIndex="1" FontSize="14.667" HorizontalAlignment="Stretch" >
            <TextBox.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.4"/>
            </TextBox.Effect>
        </TextBox>
        <TextBox Grid.Row="1" Grid.Column="1" Height="30"   Text="{Binding Path=WorkOrderNumber, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                 Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                 BorderThickness="2" Margin="5,5,5,0" HorizontalContentAlignment="Center" CharacterCasing="Upper"
                 VerticalContentAlignment="Center" VerticalAlignment="Center"
                 TabIndex="2" FontSize="14.667" HorizontalAlignment="Stretch"
                 >
            <TextBox.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.4"/>
            </TextBox.Effect>
        </TextBox>
        <TextBlock Grid.Row="0" Grid.Column="2" Text="Work Order Status:" FontSize="14.667" FontFamily="Tahoma" Opacity="0.65" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="3" Text="User:" FontSize="14.667" FontFamily="Tahoma" Opacity="0.65" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>
        <ComboBox Grid.Row="1" Grid.Column="2" HorizontalAlignment="Stretch" FontFamily="Tahoma" Height="30"
                      HorizontalContentAlignment="Center"
                      VerticalAlignment="Center" Padding="5"
                      ItemsSource="{Binding Path=StatusStrings, Mode=TwoWay, ValidatesOnDataErrors=False}"
                      SelectedValue="{Binding Path=SelectedStatusString, Mode=TwoWay, ValidatesOnDataErrors=False}"
                      Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:ComboBoxes}, ResourceId=ComboBoxStyleOne}}"
                      BorderThickness="0" Margin="5,5,5,0" FontSize="14.667" FontWeight="Normal" TabIndex="3">
            <ComboBox.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.4"/>
            </ComboBox.Effect>
            <!--<ComboBoxItem Content="Open" IsSelected="True" Height="20"/>
            <ComboBoxItem Content="Closed" Height="20"/>
            <ComboBoxItem Content="Waiting for approval" Height="20"/>
            <ComboBoxItem Content="Waiting for parts" Height="20"/>-->
        </ComboBox>
        <TextBox Grid.Row="1" Grid.Column="3" Height="30" Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                             BorderThickness="2" Margin="5,5,5,0" HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"    VerticalAlignment="Center"
                             Text="{Binding Path=UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=False}"
                             TabIndex="4" FontSize="14.667" HorizontalAlignment="Stretch" >
            <TextBox.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.4"/>
            </TextBox.Effect>
        </TextBox>
        <!--
        <TextBlock Grid.Row="2" Grid.Column="1" Text="Start Date:" FontSize="14.667" FontFamily="Tahoma" Opacity="0.65" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>
        -->
        <!--
        <TextBlock Grid.Row="2" Grid.Column="2" Text="End Date:" FontSize="14.667" FontFamily="Tahoma" Opacity="0.65" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>
        -->
        <!--
        <shared:DateTimePicker Grid.Row="3" Grid.Column="1" ClearButtonVisible="True" BorderThickness="2"
                               BorderBrush="{DynamicResource {ComponentResourceKey ResourceId=ControlBorderBrush, TypeInTargetAssembly={x:Type wpfres:Brushes}}}"
                               Value="{Binding StartDate, Mode=TwoWay, ValidatesOnDataErrors=False, ValidatesOnExceptions=False}"
                               Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:DatePickers}, ResourceId=DateTimePickerStyleOne}}"
                               Margin="5,5,5,0" TabIndex="5"
                               >
            <shared:DateTimePicker.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
            </shared:DateTimePicker.Effect>
        </shared:DateTimePicker>
        -->
        <!--
        <shared:DateTimePicker Grid.Row="3" Grid.Column="2" ClearButtonVisible="True" BorderThickness="2"
                               BorderBrush="{DynamicResource {ComponentResourceKey ResourceId=ControlBorderBrush, TypeInTargetAssembly={x:Type wpfres:Brushes}}}"
                               Value="{Binding EndDate, Mode=TwoWay}" Margin="5,5,5,0" TabIndex="6"
                               Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:DatePickers}, ResourceId=DateTimePickerStyleOne}}"
                               >
            <shared:DateTimePicker.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
            </shared:DateTimePicker.Effect>
        </shared:DateTimePicker>
        -->

        <!--
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Organization:" FontSize="14.667" FontFamily="Tahoma" Opacity="0.65"
                   Margin="5,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
                   Visibility="{Binding Path=GroupVisible,  Converter={StaticResource BooleanToVisibilityConverter}}"
                   >
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>
        -->

        <!--
        <ComboBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="1" Height="30"
                  Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:ComboBoxes}, ResourceId=ComboBoxStyleOne}}"
                  BorderThickness="2" Margin="5,5,5,5" VerticalAlignment="Top"
                  ItemsSource="{Binding Path=DealerList, Mode=TwoWay}"
                  SelectedItem="{Binding Path=Group_Name, Mode=TwoWay}"
                  Visibility="{Binding Path=GroupVisible,  Converter={StaticResource BooleanToVisibilityConverter}}"
                  TabIndex="7" FontSize="14.667" HorizontalAlignment="Stretch" >
            <ComboBox.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.4"/>
            </ComboBox.Effect>
        </ComboBox>
        -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Right" VerticalAlignment="Center" >
            <Button Width="120" Height="30" Content="Clear All" Command="{Binding SettingsClearCommand}" Margin="15,10,0,5" IsDefault="False"
                    Style="{DynamicResource {ComponentResourceKey ResourceId=ButtonStyleOne, TypeInTargetAssembly={x:Type wpfres:Buttons}}}"
                    >
                <Button.Effect>
                    <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
                </Button.Effect>
            </Button>
            <Button Content="Apply" Width="120" Height="30" Command="{Binding FilterCommand}"
                Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:Buttons}, ResourceId=ButtonStyleOne}}"
                HorizontalAlignment="Right" Margin="10,10,5,5" TabIndex="8" IsDefault="True" VerticalAlignment="Top">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="4" Opacity="0.4"/>
                </Button.Effect>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
