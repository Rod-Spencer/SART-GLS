<UserControl x:Class="Segway.Modules.SART.Repair.Repair_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="http://schemas.actiprosoftware.com/winfx/xaml/shared"
             xmlns:wpfres="clr-namespace:Segway.WPFResources;assembly=WPFResources"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:header="http://service.segway.com/schemas/Header/"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Segway.Modules.SART.Repair"
             mc:Ignorable="d" 
             Name="RepairControl"
             d:DesignHeight="500" d:DesignWidth="1400"
             Loaded="RepairControl_Loaded"
             >

    <UserControl.Resources>
        <shared:ConditionalConverter x:Key="ConditionalConverter" />
        <system:String x:Key="MoreInformationString">Show Detail</system:String>
        <system:String x:Key="LessInformationString">Hide Detail</system:String>
        <local:ListViewItemStyleSelector x:Key="listViewItemStyleSelector"/>

        <Style x:Key="LeftMiddle" TargetType="DataGridCell" >
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
        </Style>

        <Style x:Key="CenterMiddle" TargetType="DataGridCell" >
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
        </Style>

        <Style x:Key="ApprovalStyle" TargetType="DataGridCell">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Change_Approval}" Value="Approved">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStopCollection>
                                        <GradientStop Color="#FF58AD69" Offset="0"/>
                                        <GradientStop Color="#FF047A1C" Offset="1"/>
                                    </GradientStopCollection>
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="Snow"></Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding Change_Approval}" Value="Declined">
                    <Setter Property="Background" >
                        <Setter.Value>
                            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStopCollection>
                                        <GradientStop Color="#FFE47E7E" Offset="0"/>
                                        <GradientStop Color="#FFD01006" Offset="1"/>
                                    </GradientStopCollection>
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="Snow"></Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="MainRepairGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <header:Header_Bar_Control Grid.Row="0" HeaderText="Repairs" Header_FontSize="16" Header_ImageSource="{Binding Path=ImagePath, Mode=OneWay}" />

        <DockPanel Grid.Row="1" DataContext="{Binding}" VerticalAlignment="Stretch" LastChildFill="True" HorizontalAlignment="Stretch">
            <header:Work_Order_Info DockPanel.Dock="Top" Work_Order_Number="{Binding Path=Work_Order_Num, Mode=TwoWay}" 
                                    PT_Serial_Number="{Binding Path=PTSerial,Mode=TwoWay}" 
                                    Work_Order_Color="{Binding Path=WorkOrderColor, Mode=TwoWay}"
                                    />

            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <shared:AnimatedExpander Grid.Row="0" HorizontalAlignment="Stretch"
                                             Width="Auto" Height="Auto"
                                             VerticalAlignment="Stretch" Margin="5,5,5,0" IsExpanded="{Binding IsObservationsExpanded}"
                                             IsAutoFocusOnExpandEnabled="True" Header="Observations"
                                             IsAutoExpandOnFocusEnabled="False"
                                             IsAutoCollapseOnBlurEnabled="False" Style="{DynamicResource {ComponentResourceKey ResourceId=ExpanderStyleOne, TypeInTargetAssembly={x:Type wpfres:Expanders}}}"
                                             >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TabControl Grid.Row="0" HorizontalAlignment="Stretch" Margin="0,3,0,5" TabStripPlacement="Top" SelectedItem="{Binding Path=SelectedTab}"
                                        Style="{DynamicResource {ComponentResourceKey ResourceId=TabControlStyleOne, TypeInTargetAssembly={x:Type wpfres:TabControls}}}"
                                        BorderThickness="1" SelectedIndex="{Binding Path=ObservationsIndex, Mode=TwoWay}"
                                        >
                                <TabItem Style="{DynamicResource {ComponentResourceKey ResourceId=TabItemStyleOne, TypeInTargetAssembly={x:Type wpfres:TabControls}}}">
                                    <TabItem.Header>
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Technician Observations" HorizontalAlignment="Center" FontFamily="Tahoma" FontSize="13.5" Margin="0" Opacity="1" VerticalAlignment="Center" />
                                    </TabItem.Header>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBox Grid.Row="0" Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                                                 Text="{Binding Path=Summary_Technician_Observations}" TabIndex="7" FontSize="14" Height="200" AcceptsReturn="True" 
                                                 BorderThickness="1.8" Margin="3,3,3,5" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch" HorizontalScrollBarVisibility="Auto"                                                    
                                                 TextWrapping="WrapWithOverflow" VerticalContentAlignment="Top" IsReadOnly="True"
                                                 >
                                            <TextBox.Effect>
                                                <DropShadowEffect BlurRadius="4" Opacity="0.3"/>
                                            </TextBox.Effect>
                                        </TextBox>
                                        <TextBlock Grid.Row="1" Text="Enter Observations Here" FontSize="12" FontFamily="Tahoma" Foreground="Navy" Margin="5,3" />
                                        <TextBox Grid.Row="2" Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                                                 Text="{Binding Path=Current_Technician_Observations, UpdateSourceTrigger=PropertyChanged}"
                                                 BorderThickness="1.8" Margin="3,3,3,5" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Top" HorizontalScrollBarVisibility="Auto" TabIndex="7" FontSize="14" Height="60" AcceptsReturn="True" 
                                                 TextWrapping="WrapWithOverflow" VerticalContentAlignment="Top" IsReadOnly="{Binding Path=IsReadOnly}">
                                            <TextBox.Effect>
                                                <DropShadowEffect BlurRadius="4" Opacity="0.3"/>
                                            </TextBox.Effect>
                                        </TextBox>
                                    </Grid>
                                </TabItem>
                                <TabItem Style="{DynamicResource {ComponentResourceKey ResourceId=TabItemStyleOne, TypeInTargetAssembly={x:Type wpfres:TabControls}}}" >
                                    <TabItem.Header>
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Repair Comments" HorizontalAlignment="Center" FontFamily="Tahoma" FontSize="13.5" Margin="0" Opacity="1" VerticalAlignment="Center">
                                        </TextBlock>
                                    </TabItem.Header>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBox Grid.Row="0" Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                                                 Text="{Binding Path=Summary_Repair_Comments, Mode=TwoWay}" TabIndex="7" FontSize="14" Height="200" AcceptsReturn="True" 
                                                 BorderThickness="1.8" Margin="3,3,3,5" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch" HorizontalScrollBarVisibility="Visible"                                                 
                                                 TextWrapping="WrapWithOverflow" VerticalContentAlignment="Top" IsReadOnly="True"
                                                 >
                                            <TextBox.Effect>
                                                <DropShadowEffect BlurRadius="4" Opacity="0.3"/>
                                            </TextBox.Effect>
                                        </TextBox>
                                        <TextBlock Grid.Row="1" Text="Enter Observations Here" FontSize="12" FontFamily="Tahoma" Foreground="Navy" Margin="5,3" />
                                        <TextBox Grid.Row="2" Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                                                 Text="{Binding Path=Current_Repair_Comments, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TabIndex="7" FontSize="14" Height="60" AcceptsReturn="True" 
                                                 BorderThickness="1.8" Margin="3,3,3,5" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Top" HorizontalScrollBarVisibility="Visible"  IsReadOnly="{Binding Path=IsReadOnly}" 
                                                 TextWrapping="WrapWithOverflow" VerticalContentAlignment="Top">
                                            <TextBox.Effect>
                                                <DropShadowEffect BlurRadius="4" Opacity="0.3"/>
                                            </TextBox.Effect>
                                        </TextBox>
                                    </Grid>
                                </TabItem>
                            </TabControl>

                            <Button Grid.Row="1" HorizontalAlignment="Right" Width="120" Height="30" Content="Save"
                                    Style="{DynamicResource {ComponentResourceKey ResourceId=ButtonStyleOne, TypeInTargetAssembly={x:Type wpfres:Buttons}}}"
                                    Margin="0,0,5,5" Command="{Binding Path=ObservationSaveCommand}">
                                <Button.Effect>
                                    <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
                                </Button.Effect>
                            </Button>
                        </Grid>
                    </shared:AnimatedExpander>

                    <Popup Grid.Row="2" Width="Auto" Height="Auto" AllowsTransparency="True" IsOpen="{Binding Path=PopupOpen, Mode=TwoWay}" StaysOpen="False" Placement="Center">
                        <Border Width="1000" Height="Auto" Background="{Binding Path=PopupColor, Mode=TwoWay}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding Path=PopupMessage, Mode=TwoWay}" FontSize="16" Margin="40,25" HorizontalAlignment="Center" />
                            </ScrollViewer>
                        </Border>
                    </Popup>



                    <DataGrid x:Name="ComponentList" Grid.Row="2" Margin="5,5,5,0" RowHeaderWidth="0" AutoGenerateColumns="False" CanUserAddRows="False"
                              ItemsSource="{Binding Path=PT_Components_List, Mode=TwoWay}" SelectedItem="{Binding Path=Selected_Component, Mode=TwoWay}" 
                              CanUserDeleteRows="False" 
                              ColumnHeaderStyle="{StaticResource {ComponentResourceKey ResourceId=DataGridColumnHeaderStyleOne, TypeInTargetAssembly={x:Type wpfres:DataGrids}}}"
                              >
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Installed,UpdateSourceTrigger=PropertyChanged}" Value="No">
                                        <Setter Property="Background" >
                                            <Setter.Value>
                                                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                                    <LinearGradientBrush.GradientStops>
                                                        <GradientStopCollection>
                                                            <GradientStop Color="#FFE47E7E" Offset="0"/>
                                                            <GradientStop Color="#FFD01006" Offset="1"/>
                                                        </GradientStopCollection>
                                                    </LinearGradientBrush.GradientStops>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Foreground" Value="Snow"></Setter>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Installed,UpdateSourceTrigger=PropertyChanged}" Value="Yes">
                                        <Setter Property="Background" >
                                            <Setter.Value>
                                                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                                    <LinearGradientBrush.GradientStops>
                                                        <GradientStopCollection>
                                                            <GradientStop Color="#FF58AD69" Offset="0"/>
                                                            <GradientStop Color="#FF047A1C" Offset="1"/>
                                                        </GradientStopCollection>
                                                    </LinearGradientBrush.GradientStops>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Foreground" Value="Snow"></Setter>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Installed,UpdateSourceTrigger=PropertyChanged}" Value="">
                                        <Setter Property="Background" Value="Snow"></Setter>
                                        <Setter Property="Foreground" Value="Black"></Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>


                        <DataGrid.Columns>
                            <DataGridTextColumn Header="No."          Binding="{Binding Sequence}"    CanUserResize="True"  IsReadOnly="True" CellStyle="{StaticResource LeftMiddle}" Width="50" />
                            <DataGridTextColumn Header="Part Number"  Binding="{Binding Part_Number}" CanUserResize="True" CellStyle="{StaticResource CenterMiddle}" Width="2*" />
                            <DataGridTextColumn Header="Description"  Binding="{Binding Part_Name}"   CanUserResize="True" IsReadOnly="True" Width="7*" CellStyle="{StaticResource LeftMiddle}" />
                            <DataGridTextColumn Header="Qty"          Binding="{Binding Quantity}"    CanUserResize="True" Width="50" CellStyle="{StaticResource CenterMiddle}" />


                            <DataGridComboBoxColumn Header="U/M"       DisplayMemberPath="Description"   CanUserResize="True" Width="75" 
                                                    CellStyle="{StaticResource CenterMiddle}"
                                                    SelectedValuePath="Code" SelectedValueBinding="{Binding Path=Unit_Of_Measure}"
                                                    >
                                <DataGridComboBoxColumn.ElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource" Value="{Binding Path=DataContext.UMList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:Repair_Control}}}"/>
                                    </Style>
                                </DataGridComboBoxColumn.ElementStyle>
                                <DataGridComboBoxColumn.EditingElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource" Value="{Binding Path=DataContext.UMList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"/>
                                    </Style>
                                </DataGridComboBoxColumn.EditingElementStyle>
                            </DataGridComboBoxColumn>



                            <DataGridTextColumn Header="Old Serial"   Binding="{Binding Serial_Number_Old}" CanUserResize="True" Width="4*" CellStyle="{StaticResource CenterMiddle}" />
                            <DataGridTextColumn Header="New Serial"   Binding="{Binding Serial_Number_New}" CanUserResize="True" Width="4*" CellStyle="{StaticResource CenterMiddle}" />


                            <DataGridComboBoxColumn Header="Location"  DisplayMemberPath="Description"   CanUserResize="True" Width="100" CellStyle="{StaticResource CenterMiddle}" 
                                                    SelectedValuePath="Description"
                                                    SelectedValueBinding="{Binding Path=Location}"
                                                    >
                                <DataGridComboBoxColumn.ElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource" Value="{Binding Path=DataContext.LocationCodeList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:Repair_Control}}}"/>
                                    </Style>
                                </DataGridComboBoxColumn.ElementStyle>
                                <DataGridComboBoxColumn.EditingElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource" Value="{Binding Path=DataContext.LocationCodeList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"/>
                                    </Style>
                                </DataGridComboBoxColumn.EditingElementStyle>
                            </DataGridComboBoxColumn>


                            <DataGridComboBoxColumn Header="Type"     DisplayMemberPath="Change"            CanUserResize="True" Width="100" CellStyle="{StaticResource CenterMiddle}" 
                                                    SelectedValuePath="Change"  SelectedValueBinding="{Binding Path=Change_Type}"
                                                    >
                                <DataGridComboBoxColumn.ElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource" Value="{Binding Path=DataContext.ChangeTypeList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:Repair_Control}}}"/>
                                    </Style>
                                </DataGridComboBoxColumn.ElementStyle>
                                <DataGridComboBoxColumn.EditingElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource" Value="{Binding Path=DataContext.ChangeTypeList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"/>
                                    </Style>
                                </DataGridComboBoxColumn.EditingElementStyle>
                            </DataGridComboBoxColumn>


                            <DataGridComboBoxColumn Header="Installed" DisplayMemberPath="Description"       CanUserResize="True" Width="100" CellStyle="{StaticResource CenterMiddle}" 
                                                    SelectedValuePath="Description"
                                                    SelectedValueBinding="{Binding Path=Installed}"
                                                    >
                                <DataGridComboBoxColumn.ElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource" Value="{Binding Path=DataContext.InstallTypeList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:Repair_Control}}}"/>
                                    </Style>
                                </DataGridComboBoxColumn.ElementStyle>
                                <DataGridComboBoxColumn.EditingElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource" Value="{Binding Path=DataContext.InstallTypeList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"/>
                                    </Style>
                                </DataGridComboBoxColumn.EditingElementStyle>
                            </DataGridComboBoxColumn>


                            <DataGridComboBoxColumn Header="Approval"  DisplayMemberPath="Description"   CanUserResize="True" Width="100" CellStyle="{StaticResource ApprovalStyle}" 
                                                    SelectedValuePath="Description"
                                                    SelectedValueBinding="{Binding Path=Change_Approval}"
                                                    >
                                <DataGridComboBoxColumn.ElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource" Value="{Binding Path=DataContext.ApprovalTypeList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:Repair_Control}}}"/>
                                    </Style>
                                </DataGridComboBoxColumn.ElementStyle>
                                <DataGridComboBoxColumn.EditingElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource" Value="{Binding Path=DataContext.ApprovalTypeList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"/>
                                    </Style>
                                </DataGridComboBoxColumn.EditingElementStyle>
                            </DataGridComboBoxColumn>


                            <DataGridComboBoxColumn Header="Billable"  DisplayMemberPath="Description"     CanUserResize="True" Width="100" CellStyle="{StaticResource CenterMiddle}" 
                                                    SelectedValuePath="Code"
                                                    SelectedValueBinding="{Binding Path=Billable_Code}"
                                                    >
                                <DataGridComboBoxColumn.ElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource" Value="{Binding Path=DataContext.BillableCodeList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:Repair_Control}}}"/>
                                    </Style>
                                </DataGridComboBoxColumn.ElementStyle>
                                <DataGridComboBoxColumn.EditingElementStyle>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="ItemsSource" Value="{Binding Path=DataContext.BillableCodeList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"/>
                                    </Style>
                                </DataGridComboBoxColumn.EditingElementStyle>
                            </DataGridComboBoxColumn>
                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Delete Selected Item" Command="{ Binding DeletePartCommand}" />
                                <MenuItem Header="Unselect Item"        Command="{ Binding UnSelectCommand}" />
                                <MenuItem Header="Refresh Items"        Command="{ Binding RefreshCommand}" />
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>

                </Grid>
            </ScrollViewer>
        </DockPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="2" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Add New Part Number: " FontFamily="Tahoma" FontSize="14" Opacity="0.65" Margin="0,0,10,0" VerticalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBox Name="tbNewPN" Text="{Binding Path=New_Part_Number, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontFamily="Tahoma" 
                                     Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                                     HorizontalContentAlignment="Center" 
                                     VerticalAlignment="Center"
                                     IsEnabled="{Binding Path=IsNotReadOnly}" Margin="0,0,50,0" BorderThickness="2" AcceptsReturn="True"
                                     FontSize="14.667" Height="30" Width="175"  PreviewKeyDown="tbNewPN_PreviewKeyDown" PreviewKeyUp="tbNewPN_PreviewKeyUp"
                                     >
                    <TextBox.Effect>
                        <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
                    </TextBox.Effect>
                </TextBox>
            </StackPanel>
            <Button Content="Ready To Quote" Width="150" Height="30" Grid.Row="8" Grid.Column="0" TabIndex="8" IsDefault="True"  Margin="5,5,50,5"
                                Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:Buttons}, ResourceId=ButtonStyleOne}}"
                                Command="{Binding ReadyToQuoteCommand}" Visibility="{Binding Path=QuoteVisibility, Mode=TwoWay}"
                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                >
                <Button.Effect>
                    <DropShadowEffect BlurRadius="4" Opacity="0.4"/>
                </Button.Effect>
            </Button>

        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center">
            <TextBlock Text="Count: " FontFamily="Tahoma" FontSize="14" Opacity="0.65" VerticalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock Text="{Binding RepairedPartCount}" FontFamily="Tahoma" FontSize="14" Opacity="0.65" VerticalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>

            <CheckBox Content="No Parts Required" IsChecked="{Binding Path=IsChecked_NoPartsRequired,Mode=TwoWay}"
                                  Margin="50,0" FontSize="14" VerticalAlignment="Center" IsEnabled="{Binding Path=IsNotReadOnly}"
                                  >
                <CheckBox.Effect>
                    <DropShadowEffect BlurRadius="4" Opacity="0.3"/>
                </CheckBox.Effect>
            </CheckBox>
            <TextBlock Text="Labor Hours: " FontFamily="Tahoma" FontSize="14" Opacity="0.65" Margin="50,0,10,0" VerticalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBox Text="{Binding Path=RepairHours, Mode=TwoWay}" FontFamily="Tahoma" FontSize="14.667" Width="100" Height="30" 
                                 Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                                 HorizontalContentAlignment="Center"
                                 VerticalAlignment="Center"
                                 IsEnabled="{Binding Path=IsNotReadOnly}"
                                 >
                <TextBox.Effect>
                    <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
                </TextBox.Effect>
            </TextBox>
        </StackPanel>
    </Grid>
</UserControl>
