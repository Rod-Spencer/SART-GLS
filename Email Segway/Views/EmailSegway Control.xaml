<UserControl x:Class="Segway.Service.SART.Email.EmailSegway_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpfres="clr-namespace:Segway.WPFResources;assembly=WPFResources"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Popup Grid.Row="1" Grid.RowSpan="7" Grid.Column="1" Width="Auto" Height="Auto" AllowsTransparency="True"
               IsOpen="{Binding Path=PopupOpen, Mode=TwoWay}" StaysOpen="False" Placement="Center" Grid.ColumnSpan="4">
            <Border Width="1000" Height="Auto" Background="{Binding Path=PopupColor, Mode=TwoWay}" BorderBrush="Black" BorderThickness="2" CornerRadius="10" >
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding Path=PopupMessage, Mode=TwoWay}" FontSize="16" Margin="40,25" HorizontalAlignment="Center"  />
                </ScrollViewer>
            </Border>
        </Popup>

        <TextBlock Grid.Column="1" Grid.ColumnSpan="4" Text="Email Segway" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBlocks}, ResourceId=TextBlockStyleOne}}"
                   />
        <TextBlock Grid.Column="1" Grid.Row="1" Text="Work Order Number" VerticalAlignment="Center" FontSize="14"
                   Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBlocks}, ResourceId=TextBlockStyleOne}}"
                   />
        <TextBox   Grid.Column="2" Grid.Row="1" Text="{Binding Path=Work_Order}" Margin="2" FontSize="14" Width="250" HorizontalAlignment="Left"
                   Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                   />
        <TextBlock Grid.Column="3" Grid.Row="1" Text="PT Serial Number"  VerticalAlignment="Center" FontSize="14"
                   Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBlocks}, ResourceId=TextBlockStyleOne}}"
                   />
        <TextBox   Grid.Column="4" Grid.Row="1" Text="{Binding Path=PT_Serial}" Margin="2" FontSize="14" Width="250" HorizontalAlignment="Left"
                   Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                   />
        <TextBlock Grid.Column="1" Grid.Row="2" Text="Technician's Name" VerticalAlignment="Center" FontSize="14"
                   Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBlocks}, ResourceId=TextBlockStyleOne}}"
                   />
        <TextBox   Grid.Column="2" Grid.Row="2" Text="{Binding Path=Technician}" Margin="2" FontSize="14" Width="250" HorizontalAlignment="Left"
                   Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                   />
        <TextBlock Grid.Column="3" Grid.Row="2" Text="Error Codes"       VerticalAlignment="Center" FontSize="14"
                   Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBlocks}, ResourceId=TextBlockStyleOne}}"
                   />
        <TextBox   Grid.Column="4" Grid.Row="2" Text="{Binding Path=ErrorCodes}" Margin="2" FontSize="14" Width="250" HorizontalAlignment="Left"
                   Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                   />
        <TextBlock Grid.Column="1" Grid.Row="3" Text="Return Email Address" VerticalAlignment="Center" FontSize="14"
                   Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBlocks}, ResourceId=TextBlockStyleOne}}"
                   />
        <TextBox   Grid.Column="2" Grid.Row="3" Text="{Binding Path=Email_Address}" Margin="2" FontSize="14" 
                   Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                   />
        <TextBlock Grid.Column="1" Grid.Row="4" Text="Have you successfully done the following:" Grid.ColumnSpan="2" VerticalAlignment="Bottom" FontSize="14"
                   Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBlocks}, ResourceId=TextBlockStyleOne}}"
                   />
        <StackPanel Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="4" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal">
            <TextBlock Text="Extracted A-Side CU Log"  VerticalAlignment="Center" FontSize="14" Width="250" 
                       Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBlocks}, ResourceId=TextBlockStyleOne}}"
                       />
            <RadioButton Content="Yes" Width="75" IsChecked="{Binding Path=IsCUA_Yes_Checked}" FontSize="14" GroupName="CUA" VerticalAlignment="Center" 
                         Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:RadioButtons}, ResourceId=RadioButtonStyleOne}}"
                         />
            <RadioButton Content="No"  Width="75" IsChecked="{Binding Path=IsCUA_No_Checked}"  FontSize="14" GroupName="CUA" VerticalAlignment="Center" 
                         Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:RadioButtons}, ResourceId=RadioButtonStyleOne}}"
                         />
            <TextBlock Text="Why not?" Visibility="{Binding Path=CUA_Visibility, Mode=TwoWay}" FontSize="14" 
                       Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBlocks}, ResourceId=TextBlockStyleOne}}"
                       />
            <TextBox   Text="{Binding Path=CUA_Reason}" Margin="10,2,0,2" FontSize="14" Width="450"
                       Visibility="{Binding Path=CUA_Visibility, Mode=TwoWay}"
                       Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                       />
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="4" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal">
            <TextBlock Text="Extracted B-Side CU Log"  VerticalAlignment="Center" FontSize="14" Width="250"
                       Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBlocks}, ResourceId=TextBlockStyleOne}}"
                       />
            <RadioButton Content="Yes" Width="75" IsChecked="{Binding Path=IsCUB_Yes_Checked}" FontSize="14" GroupName="CUB" VerticalAlignment="Center" 
                         Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:RadioButtons}, ResourceId=RadioButtonStyleOne}}"
                         />
            <RadioButton Content="No"  Width="75" IsChecked="{Binding Path=IsCUB_No_Checked}"  FontSize="14" GroupName="CUB" VerticalAlignment="Center" 
                         Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:RadioButtons}, ResourceId=RadioButtonStyleOne}}"
                         />
            <TextBlock Text="Why not?" Visibility="{Binding Path=CUB_Visibility, Mode=TwoWay}" FontSize="14"
                       Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBlocks}, ResourceId=TextBlockStyleOne}}"
                       />
            <TextBox   Text="{Binding Path=CUB_Reason}" Margin="10,2,0,2" FontSize="14" Width="450"
                       Visibility="{Binding Path=CUB_Visibility, Mode=TwoWay}"
                       Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                       />
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="7" Grid.ColumnSpan="4" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal">
            <TextBlock Text="Extract Starting Configuration"  VerticalAlignment="Center" FontSize="14" Width="250"
                       Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBlocks}, ResourceId=TextBlockStyleOne}}"
                       />
            <RadioButton Content="Yes" Width="75" IsChecked="{Binding Path=IsCnf_Yes_Checked}" FontSize="14" GroupName="CONFIG" VerticalAlignment="Center" 
                         Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:RadioButtons}, ResourceId=RadioButtonStyleOne}}"
                         />
            <RadioButton Content="No"  Width="75" IsChecked="{Binding Path=IsCnf_No_Checked}"  FontSize="14" GroupName="CONFIG" VerticalAlignment="Center" 
                         Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:RadioButtons}, ResourceId=RadioButtonStyleOne}}"
                         />
            <TextBlock Text="Why not?" Visibility="{Binding Path=Cnf_Visibility, Mode=TwoWay}" FontSize="14" 
                       Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBlocks}, ResourceId=TextBlockStyleOne}}"
                       />
            <TextBox   Text="{Binding Path=Cnf_Reason}" Margin="10,2,0,2" FontSize="14" Width="450"
                       Visibility="{Binding Path=Cnf_Visibility, Mode=TwoWay}"
                       Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                       />
        </StackPanel>
        <TextBlock Grid.Column="1" Grid.Row="8"  Text="Additional Comments"  VerticalAlignment="Bottom" FontSize="14"
                   Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBlocks}, ResourceId=TextBlockStyleOne}}"
                   />
        <TextBox   Grid.Column="1" Grid.Row="9"  Grid.ColumnSpan="4" Text="{Binding Path=Comments}" FontSize="14" TextWrapping="Wrap" 
                   Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleMultiLine}}" 
                   />
        <Button    Grid.Column="1" Grid.Row="10" Grid.ColumnSpan="4" Width="200" Height="30" Content="Submit" Command="{Binding SubmitCommand}"
                   Style="{DynamicResource {ComponentResourceKey ResourceId=ButtonStyleOne, TypeInTargetAssembly={x:Type wpfres:Buttons}}}"
                   />
    </Grid>
</UserControl>
