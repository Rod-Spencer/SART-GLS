<UserControl x:Class="Segway.Service.SART.BlackBox_Open_Settings_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpfres="clr-namespace:Segway.WPFResources;assembly=WPFResources"
             xmlns:shared="http://schemas.actiprosoftware.com/winfx/xaml/shared"
             mc:Ignorable="d" 
             d:DesignHeight="75" 
             d:DesignWidth="1000"
             x:Name="BB_Open_Settings"
             >


    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <!--<RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>-->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto" MinWidth="225"/>
        </Grid.ColumnDefinitions>

        <!--PT Serial Number-->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="PT Serial Number:" FontSize="14.667" FontFamily="Tahoma" Opacity="0.65" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>

        <TextBox Grid.Row="1" Grid.Column="0" Height="30"  BorderThickness="2" Margin="5" HorizontalContentAlignment="Center" 
                 Text="{Binding Path=dpPTSerial, Mode=TwoWay, ElementName=BB_Open_Settings, UpdateSourceTrigger=PropertyChanged}"
                 Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                 VerticalContentAlignment="Center" VerticalAlignment="Top" TabIndex="1" FontSize="14.667" HorizontalAlignment="Stretch" 
                 >
            <TextBox.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.4"/>
            </TextBox.Effect>
        </TextBox>

        <!--Work Order Number-->
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Work Order Number:" FontSize="14.667" FontFamily="Tahoma" Opacity="0.65" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>

        <TextBox Grid.Row="1" Grid.Column="1" Height="30"  BorderThickness="2" Margin="5" HorizontalContentAlignment="Center" 
                 Text="{Binding Path=dpWorkOrder, Mode=TwoWay, ElementName=BB_Open_Settings, UpdateSourceTrigger=PropertyChanged}"
                 Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                 VerticalContentAlignment="Center" VerticalAlignment="Top" TabIndex="2" FontSize="14.667" HorizontalAlignment="Stretch" 
                 >
            <TextBox.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.4"/>
            </TextBox.Effect>
        </TextBox>


        <!--User Name-->
        <TextBlock Grid.Row="0" Grid.Column="2" Text="BSA Serial Number:" FontSize="14.667" FontFamily="Tahoma" Opacity="0.65" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>
            <TextBox Grid.Row="1" Grid.Column="2" Height="30"  BorderThickness="2" Margin="5" HorizontalContentAlignment="Center" 
                 Text="{Binding Path=dpBSASerial, Mode=TwoWay, ElementName=BB_Open_Settings, UpdateSourceTrigger=PropertyChanged}"
                 Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                 VerticalContentAlignment="Center" VerticalAlignment="Top" TabIndex="4" FontSize="14.667" HorizontalAlignment="Stretch" 
                 >

                <TextBox.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.4"/>
            </TextBox.Effect>
        </TextBox>

        <!--Start Date-->

        <!--End Date-->

        <!--<StackPanel Orientation="Horizontal" Margin="0,5,5,5" HorizontalAlignment="Right" VerticalAlignment="Top">-->
        <Button Grid.Row="1" Grid.Column="3"  Content="Clear" Width="100" Height="30" Command="{Binding dpClearCommand, ElementName=BB_Open_Settings}"
                    Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:Buttons}, ResourceId=ButtonStyleOne}}"
                    Margin="5" TabIndex="8" IsDefault="True" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.4"/>
            </Button.Effect>
        </Button>
        <Button Grid.Row="1" Grid.Column="3"  Content="Apply" Width="100" Height="30" Command="{Binding dpApplyCommand, ElementName=BB_Open_Settings}"
                    Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:Buttons}, ResourceId=ButtonStyleOne}}"
                    Margin="5" TabIndex="10" IsDefault="True" VerticalAlignment="Top" HorizontalAlignment="Right">
            <Button.Effect>
                <DropShadowEffect BlurRadius="4" Opacity="0.4"/>
            </Button.Effect>
        </Button>
        <!--</StackPanel>-->
    </Grid>
</UserControl>
