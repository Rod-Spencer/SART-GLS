<UserControl x:Class="Segway.SART.Reports.Report_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:shared="http://schemas.actiprosoftware.com/winfx/xaml/shared"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Popup Grid.Row="1" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" Width="Auto" Height="Auto" AllowsTransparency="True"
               IsOpen="{Binding Path=PopupOpen, Mode=TwoWay}" StaysOpen="False" Placement="Center">
            <Border Width="1000" Height="Auto" Background="{Binding Path=PopupColor, Mode=TwoWay}" BorderBrush="Black" BorderThickness="1">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding Path=PopupMessage, Mode=TwoWay}" FontSize="{Binding Path=PopupFontSize, Mode=TwoWay}" Margin="40,25" HorizontalAlignment="Center"  />
                </ScrollViewer>
            </Border>
        </Popup>

        <WrapPanel Grid.Row="1" Grid.Column="1" >
            <Button Width="250" Height="150" Margin="10" Command="{Binding WorkOrderDetailedCommand}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <shared:ReflectionContentControl Grid.Column="0" Margin="0" ReflectionHeight="30" ReflectionSkewAngleX="0" ReflectionStartOpacity="0.5" ReflectionEndOpacity="0.0" ReflectionEndOffset="0.8" ReflectionMargin="0">
                        <Image Source="/Images/DetailedImage.png" >
                            <Image.Effect>
                                <DropShadowEffect Opacity="0.5"/>
                            </Image.Effect>
                        </Image>
                    </shared:ReflectionContentControl>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" >
                        <TextBlock Text="Work Order" HorizontalAlignment="Center" FontSize="16" >
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="{Binding Path=Work_Order_ID, Mode=TwoWay}" HorizontalAlignment="Center" FontSize="16" >
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="Detailed Report" HorizontalAlignment="Center" FontSize="16" >
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Button>
            <Button Width="250" Height="150" Margin="10" Command="{Binding WorkOrderSummaryCommand}" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <shared:ReflectionContentControl Grid.Column="0" Margin="0" ReflectionHeight="30" ReflectionSkewAngleX="0" ReflectionStartOpacity="0.5" ReflectionEndOpacity="0.0" ReflectionEndOffset="0.8" ReflectionMargin="0">
                        <Image Source="/Images/SummaryImage.png" >
                            <Image.Effect>
                                <DropShadowEffect Opacity="0.5"/>
                            </Image.Effect>
                        </Image>
                    </shared:ReflectionContentControl>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" >
                        <TextBlock Text="Work Order" HorizontalAlignment="Center" FontSize="16" >
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="{Binding Path=Work_Order_ID, Mode=TwoWay}" HorizontalAlignment="Center" FontSize="16" >
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="Summary Report" HorizontalAlignment="Center" FontSize="16" >
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="4" Opacity="0.5"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Button>
        </WrapPanel>
    </Grid>
</UserControl>
