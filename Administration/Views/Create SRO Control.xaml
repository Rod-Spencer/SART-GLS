<UserControl x:Class="Segway.Modules.Administration.Create_SRO_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpfres="clr-namespace:Segway.WPFResources;assembly=WPFResources"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="1400"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <!--<Popup Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="1" Width="Auto" Height="Auto"
               IsOpen="{Binding Path=PopupOpen, Mode = TwoWay}" StaysOpen="False" Placement="Center">
            <Border Width="800" Height="Auto" Background="{Binding Path=PopupColor, Mode=TwoWay}" BorderBrush="Black" BorderThickness="2" CornerRadius="10" >
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding Path=PopupMessage, Mode=TwoWay}" FontSize="16" Margin="40,25" HorizontalAlignment="Center" />
                </ScrollViewer>
            </Border>
        </Popup>-->

        <TextBlock Grid.Row="1" Grid.Column="1" Text="Create SRO" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" />

            <Grid Grid.Column="0">

                <Grid Grid.Row="0" Margin="0,5,0,0" Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35" />
                        <RowDefinition Height="35" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10" BorderBrush="Black" BorderThickness="0,0,0,1" />

                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10" Text="Incident/SRO Information" FontSize="20"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <TextBlock Grid.Row="1" Grid.Column="1" Text="Serial Number" FontSize="16" VerticalAlignment="Center"/>
                    <TextBox   Grid.Row="1" Grid.Column="2" Text="{Binding Path=SerialNumber, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center" 
                               KeyUp="Create_SRO_KeyUp" KeyDown="Create_SRO_KeyDown"
                               />

                    <StackPanel Grid.Row="1" Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Label Grid.Row="0" Grid.Column="0" Name="lblSRO_Num" Content="SRO Number:" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5,0" Foreground="Blue" />
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Path=SRO_Number, Mode=TwoWay}" FontSize="22" VerticalAlignment="Center"  Margin="5,0" Foreground="Blue">
                            <TextBlock.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Copy To Clipboard" Command="{Binding ClipBoardCommand}" />
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </StackPanel>

                    <TextBlock Grid.Row="2" Grid.Column="1" Text="Under Warranty" FontSize="16" VerticalAlignment="Center"/>
                    <CheckBox  Grid.Row="2" Grid.Column="2" IsChecked="{Binding Path=IsWarranty, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="1.75" ScaleY="1.75" />
                        </CheckBox.LayoutTransform>
                    </CheckBox>

                    <ScrollViewer Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="15" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Part Number" FontSize="16" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="0" Grid.Column="1" Text="{Binding Path=PartNumber, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding Path=Part_Description, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Entered By" FontSize="16" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="1" Grid.Column="1" Text="{Binding Path=Partner_ID, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Path=Partner_Description, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Servicing Dealer" FontSize="16" VerticalAlignment="Center"/>
                            <Button    Grid.Row="2" Grid.Column="0" Content="..." Width="20" Height="15"  HorizontalAlignment="Right" VerticalAlignment="Center" 
                                       VerticalContentAlignment="Top"   Command="{Binding DealerLookupCommand}" Visibility="Hidden" />
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                                <TextBox  Text="{Binding Path=Dealer_Num, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center" Width="60" Name="txtDealNum" />
                                <Button Content="L/U" FontSize="16" Width="40" VerticalAlignment="Center" Command="{Binding LookupDealerCommand}" Margin="5,2"/>
                                <TextBox  Text="{Binding Path=Dealer_Seq, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center" Width="40" Name="txtDealSeq"/>
                            </StackPanel>
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding Path=Dealer_Description, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Description" FontSize="16" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Path=Incident_Description, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center"/>


                            <TextBlock Grid.Row="4" Grid.Column="0" Text="SRO Type" FontSize="16" VerticalAlignment="Center"/>
                            <ComboBox  Grid.Row="4" Grid.Column="1" FontSize="16" VerticalAlignment="Center"
                                   ItemsSource="{Binding Path=SRO_Type_List, Mode=TwoWay}" SelectedItem="{Binding Path=Selected_SRO_Type, Mode=TwoWay}"
                                   />
                            <TextBlock Grid.Row="4" Grid.Column="3" Text="{Binding Path=SRO_Type_Description, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Priority" FontSize="16" VerticalAlignment="Center"/>
                            <ComboBox  Grid.Row="5" Grid.Column="1" FontSize="16" VerticalAlignment="Center"
                                   ItemsSource="{Binding Path=Priority_List, Mode=TwoWay}" SelectedItem="{Binding Path=Selected_Priority, Mode=TwoWay}"
                                   />
                            <TextBlock Grid.Row="5" Grid.Column="3" Text="{Binding Path=Priority_Description, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Status Code" FontSize="16" VerticalAlignment="Center"/>
                            <ComboBox  Grid.Row="6" Grid.Column="1" FontSize="16" VerticalAlignment="Center"
                                   ItemsSource="{Binding Path=Status_List, Mode=TwoWay}" SelectedItem="{Binding Path=Selected_Status, Mode=TwoWay}"
                                   />
                            <TextBlock Grid.Row="6" Grid.Column="3" Text="{Binding Path=Status_Description, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Site" FontSize="16" VerticalAlignment="Center"/>
                            <ComboBox  Grid.Row="7" Grid.Column="1" FontSize="16" VerticalAlignment="Center"
                                   ItemsSource="{Binding Path=Site_List, Mode=TwoWay}" SelectedItem="{Binding Path=Selected_Site, Mode=TwoWay}"
                                   />
                            <TextBlock Grid.Row="7" Grid.Column="3" Text="{Binding Path=Site_Description, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Destination" FontSize="16" VerticalAlignment="Center"/>
                            <ComboBox  Grid.Row="8" Grid.Column="1" FontSize="16" VerticalAlignment="Center"
                                   ItemsSource="{Binding Path=Dest_List, Mode=TwoWay}" SelectedItem="{Binding Path=Selected_Dest, Mode=TwoWay}"
                                   />

                            <TextBlock Grid.Row="9" Grid.Column="0" Text="Region" FontSize="16" VerticalAlignment="Center"/>
                            <ComboBox  Grid.Row="9" Grid.Column="1" FontSize="16" VerticalAlignment="Center"
                                   ItemsSource="{Binding Path=Region_List, Mode=TwoWay}" SelectedItem="{Binding Path=Selected_Region, Mode=TwoWay}"
                                   />
                            <TextBlock Grid.Row="9" Grid.Column="3" Text="{Binding Path=Region_Description, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center"/>

                            <!--<TextBlock Grid.Row="10" Grid.Column="1" Text="Transaction" FontSize="16" VerticalAlignment="Center"/>
                        <ComboBox  Grid.Row="10" Grid.Column="2" FontSize="16" VerticalAlignment="Center"
                                   ItemsSource="{Binding Path=Trans_List, Mode=TwoWay}" SelectedItem="{Binding Path=Selected_Trans, Mode=TwoWay}"
                                   />-->

                            <TextBlock Grid.Row="10" Grid.Column="0" Text="Price Code" FontSize="16" VerticalAlignment="Center"/>
                            <ComboBox  Grid.Row="10" Grid.Column="1" FontSize="16" VerticalAlignment="Center"
                                   ItemsSource="{Binding Path=Price_List, Mode=TwoWay}" SelectedItem="{Binding Path=Selected_Price, Mode=TwoWay}"
                                   />
                            <TextBlock Grid.Row="10" Grid.Column="3" Text="{Binding Path=Price_Description, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="11" Grid.Column="0" Text="End User Type" FontSize="16" VerticalAlignment="Center"/>
                            <ComboBox  Grid.Row="11" Grid.Column="1" FontSize="16" VerticalAlignment="Center"
                                   ItemsSource="{Binding Path=EndUser_List, Mode=TwoWay}" SelectedItem="{Binding Path=Selected_EndUser, Mode=TwoWay}"
                                   />
                            <TextBlock Grid.Row="11" Grid.Column="3" Text="{Binding Path=EndUser_Description, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="12" Grid.Column="0" Text="Contact" FontSize="16" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="12" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Path=Contact_Name, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="13" Grid.Column="0" Text="Phone" FontSize="16" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="13" Grid.Column="1" Text="{Binding Path=Contact_Phone, Mode=TwoWay}" FontSize="16" VerticalAlignment="Center"/>

                        </Grid>
                    </ScrollViewer>

                    <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5"  Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button Content="Submit" Width="100" Height="30" Command="{Binding SubmitSROCommand}" Margin="20,0"
                                Style="{DynamicResource {ComponentResourceKey ResourceId=ButtonStyleOne, TypeInTargetAssembly={x:Type wpfres:Buttons}}}"
                                />
                        <Button Content="Clear" Width="100" Height="30" Command="{Binding ClearSROCommand}" Margin="20,0"
                                Style="{DynamicResource {ComponentResourceKey ResourceId=ButtonStyleOne, TypeInTargetAssembly={x:Type wpfres:Buttons}}}"
                                />
                        <Button Content="Use Defaults" Width="100" Height="30" Command="{Binding UseDefaultsCommand}" Margin="20,0"
                                Style="{DynamicResource {ComponentResourceKey ResourceId=ButtonStyleOne, TypeInTargetAssembly={x:Type wpfres:Buttons}}}"
                                />
                        <Button Content="Set as Defaults" Width="100" Height="30" Command="{Binding SetDefaultsCommand}" Margin="20,0"
                                Style="{DynamicResource {ComponentResourceKey ResourceId=ButtonStyleOne, TypeInTargetAssembly={x:Type wpfres:Buttons}}}"
                                />
                    </StackPanel>
                </Grid>

                <!--<Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="50" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="0,1" />
                        <TextBlock Grid.Row="0" Text="Reasons" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Add" Width="100" Height="30"
                                    Style="{DynamicResource {ComponentResourceKey ResourceId=ButtonStyleOne, TypeInTargetAssembly={x:Type wpfres:Buttons}}}"
                                    Command="{Binding ReasonAddCommand}"
                                    />
                        </StackPanel>
                    </Grid>-->
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="200" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" />
                <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" />

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" BorderBrush="Black" BorderThickness="0,0,0,1" />
                    <TextBlock Grid.Row="0" Text="Notes/Comments" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" />

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ListView Grid.Row="0" ItemsSource="{Binding Path=Note_List}" BorderBrush="Black"  BorderThickness="1" Margin="2" x:Name="Comments"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Width="{Binding (FrameworkElement.ActualWidth), RelativeSource={RelativeSource AncestorType=ScrollContentPresenter}}" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderThickness="1" BorderBrush="Black" >
                                        <Grid Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=ViewportWidth}">
                                            <!--<Grid Width="{Binding Path=ActualWidth, ElementName=Comments, Mode=OneWay}">-->
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="28" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Text="{Binding Path=Header}" FontSize="16" FontWeight="Bold"  />
                                            <TextBlock Grid.Row="1" Text="{Binding Path=Note}" FontSize="16" TextWrapping="Wrap" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                        <!--<TextBox Grid.Row="0" Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                                 BorderThickness="1.8" Margin="3,3,3,5" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch" HorizontalScrollBarVisibility="Visible"
                                 TabIndex="7" FontSize="14" AcceptsReturn="True" Text="{Binding Path=SRO_Notes}"
                                 TextWrapping="WrapWithOverflow" VerticalContentAlignment="Top" IsReadOnly="True"
                                 >
                            <TextBox.Effect>
                                <DropShadowEffect BlurRadius="4" Opacity="0.3"/>
                            </TextBox.Effect>
                        </TextBox>-->
                        <TextBlock Grid.Row="1" Text="Enter Notes/Comments Here" FontSize="12" FontFamily="Tahoma" Foreground="Navy" Margin="5,3" />
                        <TextBox Grid.Row="2" Style="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type wpfres:TextBoxes}, ResourceId=TextBoxStyleOne}}"
                                 BorderThickness="1.8" Margin="3,3,3,5" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Stretch"
                                 VerticalAlignment="Top" HorizontalScrollBarVisibility="Visible"
                                 TabIndex="7" FontSize="14" Height="60" AcceptsReturn="True" 
                                 Text="{Binding Path=SRO_Note, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="WrapWithOverflow" VerticalContentAlignment="Top"
                                 >
                            <TextBox.Effect>
                                <DropShadowEffect BlurRadius="4" Opacity="0.3"/>
                            </TextBox.Effect>
                        </TextBox>
                    </Grid>

                    <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" Content="Submit" Width="100" Height="30"
                                Style="{DynamicResource {ComponentResourceKey ResourceId=ButtonStyleOne, TypeInTargetAssembly={x:Type wpfres:Buttons}}}"
                            Command="{Binding NoteSubmitCommand}"
                                />
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="5" BorderBrush="Black" BorderThickness="1" />
                        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" BorderBrush="Black" BorderThickness="1,0,1,0" />
                        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Black" BorderThickness="0,0,0,.5" />
                        <Border Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2" BorderBrush="Black" BorderThickness="0,0,0,.5" />
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Primary" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="Secondary" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" />

                        <ListView Grid.Row="1" Grid.Column="1" Margin="3" BorderBrush="Black" BorderThickness=".5" Background="Transparent"
                                  ItemsSource="{Binding Path=Reason_List, Mode=TwoWay}" SelectedItem="{Binding Path=Selected_Reason, Mode=TwoWay}"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  >
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Width="{Binding (FrameworkElement.ActualWidth), RelativeSource={RelativeSource AncestorType=ScrollContentPresenter}}" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <!--<Border BorderThickness=".5" BorderBrush="Black" >-->
                                    <Grid Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=ViewportWidth}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="75" />
                                            <ColumnDefinition Width="5" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Path=General_Reason_Code}" FontSize="16"  />
                                        <TextBlock Grid.Column="2" Text="{Binding Path=General_Reason_Description}" FontSize="16" />
                                    </Grid>
                                    <!--</Border>-->
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>

                        <StackPanel Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <TextBlock Text="{Binding Path=Specific_Code, Mode=TwoWay}" FontSize="16" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Path=Specific_Description, Mode=TwoWay}" FontSize="16" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Grid.Row="0" Text="Reasons" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" />

                    <Grid Grid.Row="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Add" Width="100" Height="30" Margin="20,0"
                                    Style="{DynamicResource {ComponentResourceKey ResourceId=ButtonStyleOne, TypeInTargetAssembly={x:Type wpfres:Buttons}}}"
                                    Command="{Binding ReasonAddCommand}"
                                    />
                            <Button Content="Delete" Width="100" Height="30" Margin="20,0"
                                    Style="{DynamicResource {ComponentResourceKey ResourceId=ButtonStyleOne, TypeInTargetAssembly={x:Type wpfres:Buttons}}}"
                                    Command="{Binding ReasonDelCommand}"
                                    />
                        </StackPanel>
                    </Grid>
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</UserControl>
